<?xml version="1.0" encoding="UTF-8"?>

<flectra>

<!-- Tree view of the Appointment model -->
<record id="appointment_tree" model="ir.ui.view">
    <field name="name">hospital.appointment.tree</field>
    <field name="model">hospital.appointment</field>
    <field name="arch" type="xml">
    <tree string="Appointment">
        <field name="name"/>
        <field name="patient_id"/>
        <field name="patient_age"/>
        <field name="appointment_date"/>
        <field name="notes"/>
    </tree>
    </field>
</record>

<!-- Form view of the Appointment model -->
<record id="appointment_form" model="ir.ui.view">
    <field name="name">hospital.appointment.form</field>
    <field name="model">hospital.appointment</field>
    <field name="arch" type="xml">
        <form string="Appointment">
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="open_patient_appointments" type="object" class="oe_stat_button" icon="fa-calendar" string="Appointment">
                    </button>
                </div>
                <div class="oe_title">
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group>
                    <group>
                    <field name="patient_id"/>
                    <field name="patient_age"/>
                    </group>
                    <group>
                    <field name="appointment_date"/>
                    </group>
                </group>
                <group>
                    <field name="notes"/>
                </group>
            </sheet>
            <div class="oe_chatter">
    -          <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
    -          <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
    -       </div>
        </form>
    </field>
</record>

<!-- Action for Patient menu -->
<record id="action_appointment" model="ir.actions.act_window">
    <field name="name">Appointments</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hospital.appointment</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form,</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
        Create first Appointment !
        </p>
    </field>
</record>

<menuitem id="hospital_appointment" name="Appointments" parent="hospital_root" action="action_appointment" sequence="1"/>

</flectra>